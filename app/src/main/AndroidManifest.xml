<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.fanygtz.mascotaspersistencia">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/footprint"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="mx.fanygtz.mascotaspersistencia.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mx.fanygtz.mascotaspersistencia.FavoritaActivity"
            android:parentActivityName="mx.fanygtz.mascotaspersistencia.MainActivity">

            <!-- Soporte para versiones 4.0 o menores -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mx.fanygtz.mascotaspersistencia.MainActivity" />
        </activity>
        <activity
            android:name="mx.fanygtz.mascotaspersistencia.ContactoActivity"
            android:parentActivityName="mx.fanygtz.mascotaspersistencia.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mx.fanygtz.mascotaspersistencia.MainActivity" />
        </activity>
        <activity android:name="mx.fanygtz.mascotaspersistencia.BioDesarrollador"
            android:parentActivityName="mx.fanygtz.mascotaspersistencia.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mx.fanygtz.mascotaspersistencia.MainActivity" />
        </activity>
    </application>

</manifest>
